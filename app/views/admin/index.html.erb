<h1>Admin of Kalique</h1>

<% flash.each do |type, msg| %>
  <div id="<%= type %>">
    <%= msg %>
  </div>
<% end %>

<div style="display: flex">
  <%= button_to 'Load posts', admin_load_posts_path, method: :post, style: "display: flex; margin-right: 25px;" %>
  <%= button_to 'Delete all posts', admin_delete_all_posts_path, method: :post %>
</div>

<table style="margin-bottom: 25px">
  <thead>
    <tr>
      <th>id</th>
      <th>PostÂ Id</th>
      <th>Domain</th>
      <th>Parse Time</th>
      <th>Text</th>
    </tr>
  </thead>
  <tbody style="font-size: 0.8em;">
    <% @texts.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.post_id %></td>
        <td><%= p.domain %></td>
        <td><%= p.parse_time %></td>
        <td><%= simple_format(p.text) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @texts %>
